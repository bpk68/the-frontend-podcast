---
import SocialLinks from './SocialLinks.astro';
---

<footer class="container max-w-5xl mt-32 mb-10">
  <div class="flex flex-col gap-5 items-center justify-between sm:flex-row">
    <SocialLinks />
    <p class="text-sm uppercase">
      <a href="https://thefrontendpodcast.site" class="text-brand-yellow-900"
        >The Front End</a
      > &copy; {new Date().getFullYear()}. Powered by <a
        target="_blank"
        class="text-brand-yellow-900"
        href="https://astro.build/"
        rel="noreferrer noopener">Astro</a
      > and <a
        target="_blank"
        class="text-brand-yellow-900"
        rel="noreferrer noopener"
        href="https://www.netlify.com/">Netlify</a
      >.
    </p>
  </div>
