---
const navItems = [
  {
    title: 'about',
    link: '/about',
  },
  {
    title: 'episodes',
    link: '/episodes',
  },
  {
    title: 'faq',
    link: '/faq',
  },
  {
    title: 'sponsorship',
    link: '/sponsorship',
  },
  {
    title: 'be a guest',
    link: '/guests',
  },
  {
    title: 'contact',
    link: '/contact',
  },
];
---

<nav
  class="bg-brand-blue-900 text-brand-white-900"
  role="navigation"
  aria-label="main-navigation"
>
  <div class="container">
    <div class="flex flex-row justify-start items-center gap-8">
      <div class="navbar-brand flex flex-row items-center justify-between">
        <a href="/" class="block w-16" title="Logo">
          <img src="/img/logo.svg" alt="The Front End Podcast logo" />
        </a>
        {/* Hamburger menu */}
        <div id="hamburgerMenu" class="sm:hidden" data-target="navMenu">
          <span class="sr-only">Show navigation menu</span>
          <i class="fa-solid fa-bars"></i>
        </div>
      </div>
      <div id="navMenu" class="text-2xl flex flex-col sm:flex-row">
        {
          navItems.map((item) => (
            <a
              class="h-full hover:bg-brand-yellow-900 hover:text-white block py-4 px-4"
              href={item.link}
            >
              {item.title}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>

<script>
  const menu = document.getElementById('navMenu');
  const hamburger = document.getElementById('hamburgerMenu');

  function toggleHamburger() {
    menu?.classList.toggle('block');
    hamburger?.classList.toggle('block');
  }

  menu?.addEventListener('click', toggleHamburger);
</script>
